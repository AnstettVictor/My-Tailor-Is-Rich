{% extends 'base.html.twig' %}

{% block title %}Income{% endblock %}

{% block body %}
    <h1>Income</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ income.id }}</td>
            </tr>
            <tr>
                <th>User Name</th>
                <td>{{ income.user }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ income.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ income.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ income.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ income.createdAt ? income.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ income.updatedAt ? income.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('income_index') }}">back to list</a>

    <a href="{{ path('income_edit', {'id': income.id}) }}">edit</a>

    {{ include('income/_delete_form.html.twig') }}
{% endblock %}
